<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/app_margin_medium"
    android:layout_marginTop="@dimen/app_margin_medium"
    android:background="@drawable/all_background_rectange"
    android:elevation="1dp"
    android:orientation="vertical">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_ihc_ihc"
        style="@style/TextStyle.Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:text="@string/ihc"
        android:textColor="@color/greySettingsTitle" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_ihc_hnp"
        style="@style/TextStyle.Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:text="@string/hnp"
        android:textColor="@color/greySettingsTitle" />

</LinearLayout>