        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:drawableEnd="@drawable/ic_clear_18dp"
        android:drawablePadding="@dimen/app_margin"
        android:gravity="end"
        android:hint="@string/square_metre"
        android:inputType="number"
        android:paddingBottom="24dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialogfilter_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textview_dialogfilter_from"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
